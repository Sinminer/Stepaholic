<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<GridLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:layout_gravity=""
        android:layout_marginEnd="120dp"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/title2"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="1"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="@string/stepaholic"
        android:textSize="30sp" />
    <TextView
        android:id="@+id/stepTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_marginTop="200dp"
        android:text="@string/total_steps"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/stepsDisplay"
        android:layout_width="152dp"
        android:layout_height="114dp"
        android:layout_row="2"
        android:layout_column="1"
        android:gravity="center"
        />

    <ImageButton
        android:id="@+id/settingsButton"
        android:layout_width="141dp"
        android:layout_height="wrap_content"
        android:layout_row="4"
        android:layout_column="2"
        android:layout_gravity="bottom"
        app:srcCompat="@android:drawable/ic_menu_manage"/>

    <TextView
        android:id="@+id/mileTitle"
        android:layout_width="89dp"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_marginTop="200dp"
        android:gravity="center"
        android:text="@string/miles"
        android:layout_marginStart="30dp"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/kiloTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="2"
        android:layout_marginTop="200dp"
        android:text="@string/kilometres"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/kiloDisplay"
        android:layout_width="130dp"
        android:layout_height="114dp"
        android:layout_row="2"
        android:layout_column="2"
        android:gravity="center" />
    <TextView
        android:id="@+id/mileDisplay"
        android:layout_width="130dp"
        android:layout_height="114dp"
        android:layout_row="2"
        android:layout_column="0"
        android:gravity="center"
        />
</GridLayout>

</androidx.appcompat.widget.LinearLayoutCompat>